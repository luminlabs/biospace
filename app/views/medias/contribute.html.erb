      <%= f.text_field :title  %><br>
    </div>
    <div><%= f.label :description, "Description:" %><br />
      <%= f.text_field :description %><br>
    </div>
    <div id="wistia-upload-widget" style="width: 200px; height: 40px;"><br>
       <div class="cancel"></div>
    </div><br><br><br><br>
    <%= f.submit 'Submit', { class: 'button black' }  %>       
  <% end %>
  

</div>


